<h1>Secondary Genres</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @secondary_genres.each do |secondary_genre| %>
      <tr>
        <td><%= link_to 'Show', secondary_genre %></td>
        <td><%= link_to 'Edit', edit_secondary_genre_path(secondary_genre) %></td>
        <td><%= link_to 'Destroy', secondary_genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

